{#
    Params:
    {
        'label'             : string,
        'target'            : string,
        'additionalClass'   : ?string,
        'id'                : ?string
    }
#}
{% set additionalClass = additionalClass|default(null) %}
{% set id = id|default('') %}

<button
        class="btn {{ additionalClass }} modal--ajax-content__btn"
        data-target="{{ target }}"
        id="{{ id }}">
    {{ label }}
</button>
